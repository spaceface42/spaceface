{
    "compilerOptions": {
        "target": "ES2022", // Modern JS features (private fields, top-level await)
        "module": "ES2022", // Native ESM output
        "moduleResolution": "bundler", // Node-style module resolution
        "rootDir": "./src", // Source directory
        "outDir": "./docs/spaceface", // Build output directory
        "strict": true, // Enable all strict type-checking options
        "strictNullChecks": true, // Explicit null checking
        "esModuleInterop": true, // Default import compatibility for CommonJS
        "useDefineForClassFields": true, // Modern class field semantics
        "removeComments": true, // Clean output for production
        "declaration": true, // Generate *.d.ts type definitions
        "sourceMap": true, // Generate source maps for debugging
        "skipLibCheck": true, // Speed up compilation by skipping type checks on node_modules
        "forceConsistentCasingInFileNames": true, // Avoid case-related module errors
        "noEmitOnError": true // Prevent emitting if there are type errors
    },
    "include": ["src/**/*"],
    "exclude": ["docs/**/*", "node_modules/**/*"]
}
